<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Page</title>
    <link rel="icon" href="/assets/logo.png" type="image/png" />
    <link rel="stylesheet" href="/general.css">
    <link rel="stylesheet" href="/contact.css">
</head>
<body>
    <!-- header -->
    <%- include('partials/header') %>
    <!-- header end -->

    <main>
        <section>
            <div class="contact">
                <img class="img-fluid contact-img" src="/assets/contact.png" alt="Contact">
                <h1 class="contact-text">Contact Us</h1>
            </div>
        </section>

        <section class="contact-form">
            <div class="container">
                <div class="row justify-content-center align-items-center">
                    <div class="col-md-6">
                        <div class="form-card1">
                            <div class="form-card2">
                                <!-- Contact Form -->
                                <form class="form" action="/contact" method="post">

                                    <p class="form-heading fs-2 fw-bold">Get In Touch</p>

                                    <!-- Name Field -->
                                    <div class="form-field pt-2">
                                        <input required placeholder="Name" class="input-field" type="text" name="name" />
                                    </div>

                                    <!-- Email Field -->
                                    <div class="form-field pt-2">
                                        <input required placeholder="Email" class="input-field" type="email" name="email" />
                                    </div>

                                    <!-- Subject Field -->
                                    <div class="form-field pt-2">
                                        <input required placeholder="Subject" class="input-field" type="text" name="subject" />
                                    </div>

                                    <!-- Message Field -->
                                    <div class="form-field pt-2">
                                        <textarea required placeholder="Message" cols="30" rows="3" class="input-field" name="message"></textarea>
                                    </div>

                                    <!-- Submit Button -->
                                    <div class="col-12 text-center">
                                        <button class="sendMessage-btn mt-4" type="submit" onclick="submitInputs()";>Send Message</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- footer -->
    <%- include('partials/footer') %>
    <!-- footer end -->
</body>
</html>
