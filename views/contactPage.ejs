<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Page</title>
    <link rel="stylesheet" href="/general.css">
    <link rel="stylesheet" href="contact.css">

</head>
<body>
    <!-- header -->
    <header class="sticky-top">
            <nav class="navbar navbar-expand-lg navbar-light ">
            <div class="container">
            <a class="navbar-brand" href="/"><img src="/assets/ASP.png" alt="Logo"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/articles">Articles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/program">Program</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/contact">Contact</a>
                    </li>
                </ul>
                <!-- login button  -->
                <a class="ms-auto login-btn" href="/login">
                    <button> LOGIN
                    </button>
                </a>
            </div>
            </div>
            </nav>
    </header>
    <!-- header end -->
    <main>
        <section>
            <div class="contact">
            <img class="img-fluid contact-img" src="assets/contact.png" alt="">
            <h1 class="contact-text">Contact US</h1>
            </div>
        </section>

        <section class="contact-form">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="form-card1">
                            <div class="form-card2">
                              <form class="form">
                                <p class="form-heading fs-2 fw-bold">Get In Touch</p>

                                <div class="form-field pt-2">
                                  <input required="" placeholder="Name" class="input-field" type="text" />
                                </div>

                                <div class="form-field pt-2">
                                  <input
                                    required=""
                                    placeholder="Email"
                                    class="input-field"
                                    type="email"
                                  />
                                </div>

                                <div class="form-field pt-2">
                                  <input
                                    required=""
                                    placeholder="Subject"
                                    class="input-field"
                                    type="text"
                                  />
                                </div>

                                <div class="form-field pt-2">
                                  <textarea
                                    required=""
                                    placeholder="Message"
                                    cols="30"
                                    rows="3"
                                    class="input-field"
                                  ></textarea>
                                </div>
                                <div class="col-12 text-center">
                                    <button class="sendMessage-btn mt-4">Send Message</button>
                                </div>

                              </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>


    <!-- footer -->
    <%- include('partials/footer') %>
    <!-- footer end -->
</body>

<script src="/bootstrap.bundle.min.js"></script>
</html>
