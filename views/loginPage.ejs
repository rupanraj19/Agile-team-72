<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="icon" href="/assets/logo.png" type="image/png" />
    <link rel="stylesheet" href="/bootstrap.min.css"> <!-- bootstrap css -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"> <!-- Bootstrap icons -->
    <link rel="stylesheet" href="/login.css">
</head>
<body>

    <div class="wrapper"> <!-- login form-->
        <form action="/login" method="post">
          <h1>Login</h1>
          <% if (errors.length > 0) { %>
            <div class="alert alert-danger">
              <% errors.forEach(function(error) { %>
                <p><%= error %></p>
              <% }); %>
            </div>
          <% } %>

          <div class="input-box"> <!-- Input Box -->
            <input name="username" type="text" placeholder="Username" required>
            <i class="bi bi-person-fill"></i>
          </div>
          <div class="input-box">
            <input name="password" type="password" placeholder="Password" required>
            <i class="bi bi-lock-fill"></i>
          </div>
          <div class="remember-forgot">
            <label><input type="checkbox">Remember Me</label>
            <a href="/auth/forgot-password">Forgot Password</a>
          </div>
          <button type="submit" class="btn text-white">Login</button>
          <div class="register-link">
            <p>Don't have an account? <a href="/register">Register</a></p>
          </div>
        </form>
    </div>


  <script src="/bootstrap.bundle.min.js"></script> <!-- Bootstrap js-->

</body>
</html>
