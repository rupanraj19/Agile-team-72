<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Articles Page</title>
    <link rel="icon" href="/assets/logo.png" type="image/png" />
    <!-- <link rel="stylesheet" href="/main.css"> -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/article.css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <!--  JS Script for searching and filtering  -->
    <script>
        function filterArticles() {
            const source = document.querySelector('input[name="source"]:checked')?.value || 'all';
            const selectedCategories = Array.from(document.querySelectorAll('input[name="category"]:checked')).map(el => el.value.toLowerCase());
            const searchTerm = document.getElementById('search').value.toLowerCase();

            document.querySelectorAll('.article').forEach(article => {
                const articleSource = article.dataset.source;
                const articleCategory = article.dataset.category.toLowerCase();
                const articleTitle = article.querySelector('.title') ? article.querySelector('.title').textContent.toLowerCase() : '';
                const articleDescription = article.querySelector('.description') ? article.querySelector('.description').textContent.toLowerCase() : '';

                const sourceMatch = (source === 'all' || articleSource === source);
                const categoryMatch = selectedCategories.length === 0 || selectedCategories.includes(articleCategory);
                const searchMatch = articleTitle.includes(searchTerm) || articleDescription.includes(searchTerm);

                article.style.display = sourceMatch && categoryMatch && searchMatch ? '' : 'none';
            });
        }
    </script>
</head>
<body>
    <!-- header -->
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-light ">
        <div class="container">
        <a class="navbar-brand" href="/"><img src="/assets/ASP.png" alt="Logo"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/articles">Articles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/program">Program</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="/about">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/contact">Contact</a>
                </li>
            </ul>
            <!-- login button or username display -->
            <% if (user) { %>
              <div class="ms-auto">
                  <span class="navbar-text">Welcome, <%= user.user_name %></span>
                  <a href="/logout" class="btn btn-outline-danger ms-2">Logout</a>
              </div>
          <% } else { %>
              <a class="ms-auto" href="/login">
                  <button class="login-btn">LOGIN</button>
              </a>
          <% } %>
            </div>
        </div>
        </nav>
    </header>
    <!-- header end -->

    <main>
        <section id="main-display">
            <div class="container-fluid">
                <div class="row fixture mt-0">
                    <div class="col-12 p-0">
                        <div class="position-relative">
                            <img class="img img-fluid w-100" src="assets/articles.png" alt="articles background">
                            <div class="area position-absolute top-0 start-0 w-100 h-100">
                                <ul class="circles">
                                    <li></li>
                                    <li></li>
                                    <li></li>
                                    <li></li>
                                    <li></li>
                                    <li></li>
                                    <li></li>
                                    <li></li>
                                    <li></li>
                                    <li></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <div class="container-fluid">
          <div class="row">
            <!-- Sidebar for filters -->
            <aside class="col-md-3 p-3 bg-white border-end">
              <section class="filter-section">
                <h2>Filter</h2>
                <!-- Source Dropdown -->
                <div class="dropdown mb-3">
                  <button class="btn btn-secondary dropdown-toggle w-100" type="button" id="sourceDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    Source
                  </button>
                  <ul class="dropdown-menu" aria-labelledby="sourceDropdown">
                    <li><label class="dropdown-item"><input type="radio" name="source" value="all" checked onclick="filterArticles()"> All</label></li>
                    <li><label class="dropdown-item"><input type="radio" name="source" value="cna" onclick="filterArticles()"> Channel News Asia</label></li>
                    <li><label class="dropdown-item"><input type="radio" name="source" value="mhf" onclick="filterArticles()"> Mental Health Foundation</label></li>
                  </ul>
                </div>
                <!-- Category Dropdown -->
                <div class="dropdown">
                  <button class="btn btn-secondary dropdown-toggle w-100" type="button" id="categoryDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    Category
                  </button>
                  <ul class="dropdown-menu overflow-auto" aria-labelledby="categoryDropdown" style="max-height: 200px;">
                    <% const categories = new Set(); %>
                    <% cnaArticles.forEach(article => categories.add(article.category)); %>
                    <% mhfArticles.forEach(article => categories.add(article.category)); %>
                    <% Array.from(categories).forEach(category => { %>
                      <li><label class="dropdown-item"><input type="checkbox" name="category" value="<%= category %>" onclick="filterArticles()"> <%= category %></label></li>
                    <% }); %>
                  </ul>
                </div>
              </section>
            </aside>
            <!-- Main content for articles -->
            <div class="col-md-9">
              <!-- Search Bar -->
              <section class="search-bar py-5">
                <div class="row height d-flex justify-content-center align-items-center">
                  <div class="col-md-8">
                    <div class="search">
                      <input type="text" id="search" class="form-control" onkeyup="filterArticles()" placeholder="Search articles...">
                    </div>
                  </div>
                </div>
              </section>
              <!-- Articles Sections -->
              <section class="articles-section mt-4">
                <h2>Channel News Asia Articles</h2>
                <ul class="list-unstyled">
                  <% cnaArticles.forEach(article => { %>
                    <li class="article mb-4 p-3 border rounded" data-source="cna" data-category="<%= article.category %>">
                      <strong>Category:</strong> <%= article.category %><br>
                      <strong>Title:</strong> <a class="title" href="<%= article.link %>" target="_blank"><%= article.title %></a>

                                                 <!-- Comment Box -->
                                                 <div class="mt-3">
                                                  <h5>Leave a Comment:</h5>
                                                  <form action="/comments/add-comment" method="post">
                                                      <input type="hidden" name="articleId" value="<%= article.article_id %>">
                                                      <input type="hidden" name="articleType" value="cna">
                                                      <div class="form-group">
                                                          <textarea class="form-control" name="comment" rows="3" placeholder="Enter your comment" required></textarea>
                                                      </div>
                                                      <button type="submit" class="btn btn-primary mt-2">Submit</button>
                                                  </form>
                                              </div>

                                              <!-- Display Comments -->
                                              <div class="mt-4">
                                                  <h5>Comments:</h5>
                                                  <% comments.filter(c => c.article_id === article.article_id && c.article_type === 'cna').forEach(comment => { %>
                                                      <div class="comment mb-2">
                                                          <strong>User <%= comment.user_id %>:</strong>
                                                          <p><%= comment.comment %></p>
                                                          <small><%= new Date(comment.timestamp * 1000).toLocaleString() %></small>
                                                      </div>
                                                  <% }); %>
                                              </div>
                                          </li>
                                      <% }); %>
                                  </ul>
              </section>

              <section class="articles-section mt-4">
                <h2>Mental Health Foundation Articles</h2>
                <ul>
                  <% mhfArticles.forEach(article => { %>
                    <li class="article" data-source="mhf" data-category="<%= article.category %>">
                      <strong>Category:</strong> <%= article.category %><br>
                      <strong>Description:</strong> <span class="description"><%= article.description %></span><br>
                      <a href="<%= article.link %>" target="_blank">Read more</a>
                    </li>
                  <% }); %>
                </ul>
              </section>
            </div>
          </div>
        </div>
      </main>

    <!-- footer -->
    <%- include('partials/footer') %>
    <!-- footer end -->

</body>
</html>
